# Základní konfigurace aplikace
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Bezpečnostní tokeny
REVALIDATION_TOKEN=your-secret-revalidation-token-here
CRON_SECRET=your-secret-cron-token-here

# Verifikační kódy pro search engines
GOOGLE_VERIFICATION=your-google-verification-code
YANDEX_VERIFICATION=your-yandex-verification-code

# Analytics (volitelné)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PLAUSIBLE_DOMAIN=yourdomain.com

# Database (pro budoucí rozšíření)
DATABASE_URL=postgresql://user:password@localhost:5432/dailyquotes

# Email konfigurace (pro notifikace)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs (volitelné rate limiting keys)
QUOTABLE_API_KEY=optional-api-key
ZENQUOTES_API_KEY=optional-api-key

# Monetizace
GOOGLE_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXX
AMAZON_AFFILIATE_TAG=your-affiliate-tag

# Pro deployment
VERCEL_URL=your-app.vercel.app
NODE_ENV=production
